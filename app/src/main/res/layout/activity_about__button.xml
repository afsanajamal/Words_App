<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".About_Button">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Words"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/custom_button"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext">




        <TextView
            android:id="@+id/textone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:paddingLeft="7dp"
            android:paddingBottom="5dp"
            android:text="Developed By:"
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            android:gravity="center"
            android:typeface="serif" />



    <TextView
        android:id="@+id/textthree"
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Afsana Jamal Mumu"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:typeface="serif"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/texttwo"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="2. S.M. Mominul Islam"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:typeface="serif"
            />

        <TextView
            android:id="@+id/textfour"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dept. Of Computer Science And Engineering"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:typeface="serif"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textfive"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="University of Liberal Arts Bangladesh."
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:typeface="serif"
            android:textStyle="bold"
         />

    </LinearLayout>


</LinearLayout>